{
  "compilerOptions": {
    /* Language and Environment */
    "target": "esnext",
    "lib": ["es5", "es6"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
		"paths": {
			"@/*": ["*"],
			"@/lib/*" : ["./src/lib/*"],
			"@/config/*" : ["config/*"],
			"@/controllers/*" : ["controllers/*"],
			"@/modules/*" : ["modules/*"],
			"@/routes/*" : ["routes/*"],
		},
    "typeRoots": [
      "./node_modules/@types",
      "./src/lib/types"
    ],

    /* JavaScript Support */
    "allowJs": true,

    /* Emit */
    "outDir": "./dist",
    "downlevelIteration": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "strictPropertyInitialization": false,
    "useDefineForClassFields": false,

    /* Completeness */
    "skipLibCheck": true
  },
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}